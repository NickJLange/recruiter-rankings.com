<h1>Development Login</h1>
<p class="muted">Select a user to simulate their session.</p>

<div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px;">
  <% @users.group_by(&:role).each do |role, users| %>
    <div class="card">
      <h3><%= role.humanize %>s</h3>
      <ul style="list-style: none; padding: 0;">
        <% users.each do |user| %>
          <li style="margin-bottom: 10px;">
            <%= button_to "Login as #{user.id} (#{user.paid? ? 'Paid' : 'Free'})", login_path(user_id: user.id), method: :post, class: "btn" %>
            <% if user.linked_in_url %>
              <br><small class="muted"><%= user.linked_in_url %></small>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
